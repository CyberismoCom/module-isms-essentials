visible({{cardKey}}).

visible(Risk) :-
    field(Risk, "cardType", "ismsa/cardTypes/risk"),
    link({{cardKey}}, Risk, "ismsa/linkTypes/presentsRisk").

visible(Control) :-
    field(Control, "cardType", "ismsa/cardTypes/control"),
    field(Risk, "cardType", "ismsa/cardTypes/risk"),
    visible(Risk),
    link(Control, Risk, "ismsa/linkTypes/mitigates").
